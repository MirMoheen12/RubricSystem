@model RubricsystemModel.Model.RegisterationModel

@{
    ViewData["Title"] = "Registeration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="nk-content ">
    <div class="nk-block nk-block-middle nk-auth-body  wide-xs">
        <div class="brand-logo pb-4 text-center">
            <a href="html/index.html" class="logo-link">
                <img class="logo-light logo-img logo-img-lg" src="~/Theme/images/logo.png" srcset="~/Theme/images/logo2x.png 2x" alt="logo">
                <img class="logo-dark logo-img logo-img-lg" src="~/Theme/images/logo-dark.png" srcset="~/Theme/images/logo-dark2x.png 2x" alt="logo-dark">
            </a>
        </div>
        <div class="card card-bordered">
            <div class="card-inner card-inner-lg">
                <div class="nk-block-head">
                    <div class="nk-block-head-content">
                        <h4 class="nk-block-title">Register Account</h4>
                        <div class="nk-block-des">

                        </div>
                    </div>
                </div>
                <form asp-action="Registeration">
                    <div class="form-group">
                        <div class="form-label-group">
                            <label class="form-label" asp-for="Email"></label>
                        </div>
                        <div class="form-control-wrap">
                            <input type="text" asp-for="Email" class="form-control form-control-lg" id="default-01" placeholder="Enter your email address or username">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <label class="form-label" asp-for="Purpose"></label>
                        </div>
                        <div class="form-control-wrap">
                            <select asp-for="Purpose" class="form-control form-control-lg" id="default-01" placeholder="Select Purpose">
                                @*<option>Admin</option>*@
                                <option>Student</option>
                                <option>Teacher</option>
                            </select>
                        </div>
                        <span asp-validation-for="Purpose" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <label class="form-label" asp-for="Password"></label>
                        </div>
                        <div class="form-control-wrap">
                            <input type="password" asp-for="Password" class="form-control form-control-lg" id="default-01" placeholder="Enter your email address or username">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <label class="form-label" asp-for="ConfirmPassword"></label>
                        </div>
                        <div class="form-control-wrap">
                            <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" id="default-01" placeholder="Enter your email address or username">
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Sign Up</button>
                    </div>
                </form>
                <div class="form-note-s2 text-center pt-4">
                    Already have an Account <a asp-action="Login" asp-controller="Accounts">Log in</a>
                </div>
                <div class="text-center pt-4 pb-3">
                    <h6 class="overline-title overline-title-sap"><span>OR</span></h6>
                </div>
                <ul class="nav justify-center gx-4">
                    <li class="nav-item"><a class="nav-link" href="#">Facebook</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Google</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

